<h1>Add a new Trail</h1>

<%= form_for :trail, url: trails_path do |f| %>
  <p>
    <%= f.label :Name %><br>
    <%= f.text_field :Name %>
  </p>
    <p>
    <%= f.label :Location %><br>
    <%= f.text_field :Location %>
  </p>
 
  <p>
    <%= f.label :Description %><br>
    <%= f.text_area :Description %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back', trails_path %>