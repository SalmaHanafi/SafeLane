<p>
    <strong>Name:</strong>
    <%= @trail.Name %>
</p>

<p>
    <strong>Location:</strong>
    <%= @trail.Location %>
</p>

<% (0...@trail.images.count).each do |image| %>
<%= image_tag(@trail.thumbnail(image)) %>
<% end %>

<p>
    <strong>Description:</strong>
    <%= @trail.Description %>
</p>


<h2>Review</h2>
<% @trail.reviews.each do |review| %>
  <p>
    <strong>Difficulty:</strong>
    <%= review.difficulty %>
  </p>
 
   <p>
    <strong>Security:</strong>
    <%= review.security %>
  </p>
 
  <p>
    <strong>Feedback:</strong>
    <%= review.body %>
  </p>
<% end %>

<h2>Add a review:</h2>
<%= form_for([@trail, @trail.reviews.build]) do |f| %>
  <p>
    <%= f.label :difficulty %><br>
    <%= f.text_field :difficulty %>
  </p>
  
    <p>
    <%= f.label :security %><br>
    <%= f.text_field :security %>
  </p>
  <p>
    <%= f.label :Feedback %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back to trails list', trails_path %>